---
import BrightnessAuto from '../assets/icons/brightness-auto.svg'
import WhiteBalanceSunny from '../assets/icons/white-balance-sunny.svg'
import MoonAndStars from '../assets/icons/moon-and-stars.svg'
const { class: className } = Astro.props
---

<div
	class:list={[
		className,
		'border border-foreground dark:border-foreground-dark rounded-full flex justify-center items-center text-foreground dark:text-foreground-dark [&>*:hover]:brightness-75 md:opacity-80 *:cursor-pointer',
	]}
>
	<button
		data-theme="theme-auto"
		aria-label="Auto Theme"
		class="theme-button theme-auto"
	>
		<BrightnessAuto class="duration-0 text-lg w-5 h-5" />
	</button>
	<button
		data-theme="theme-light"
		aria-label="Light Theme"
		class="theme-button theme-light"
	>
		<WhiteBalanceSunny class="duration-0 text-lg w-5 h-5" />
	</button>
	<button
		data-theme="theme-dark"
		aria-label="Dark Theme"
		class="theme-button theme-dark"
	>
		<MoonAndStars class="duration-0 text-lg w-5 h-5" />
	</button>
</div>

<style>
	@reference '../styles/global.css';

	button.theme-button {
		@apply p-1 rounded-full duration-0;
	}
</style>
