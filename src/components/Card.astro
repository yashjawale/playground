---
const { title, route, author, authorGithub } = Astro.props
---

<a
	class="w-full h-full p-8 border-b border-r border-foreground/25 dark:border-foreground-dark/50 hover:bg-foreground/5 dark:hover:bg-foreground-dark/5 transition-colors"
	href={route}
>
	<h2 class="text-2xl overflow-hidden text-ellipsis whitespace-wrap">
		{title}
	</h2>
	{
		author && (
			<p class="mt-2 text-sm text-foreground/70 dark:text-foreground-dark/70">
				by{' '}
				{authorGithub ? (
					<a
						href={`https://github.com/${authorGithub}`}
						target="_blank"
						rel="noopener noreferrer"
						class="underline hover:text-foreground dark:hover:text-foreground-dark transition-colors"
						onclick={(e) => e.stopPropagation()}
					>
						{author}
					</a>
				) : (
					author
				)}
			</p>
		)
	}
</a>
