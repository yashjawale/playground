---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import { getActivitiesFromStructure } from '../utils/activities'

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'

// Automatically discover all activities without requiring metadata exports from activity files
// This approach analyzes directory structure and provides automatic author attribution
const activities = getActivitiesFromStructure()
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<main class="app-container py-20">
		<h1
			class="text-6xl font-bold md:text-8xl leading-none pt-20 md:pt-24 break-all"
		>
			Playground
		</h1>
	</main>

	<section class="app-container pb-32">
		<div
			class="grid border-t border-l border-foreground/25 dark:border-foreground-dark/50 md:grid-cols-2"
		>
			{activities.map((activity) => (
				<Card 
					title={activity.title} 
					route={activity.route} 
					author={activity.author} 
					authorGithub={activity.authorGithub} 
				/>
			))}
		</div>
	</section>
</Layout>
